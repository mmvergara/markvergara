---
import type { technologies } from "./Projects";
const { technologies } = Astro.props as { technologies: technologies[] };
---

<>
  {
    technologies.map((x) => {
      const technology = x.split("-").join("");
      return <p class={`text-sm py-[0.09rem] px-2 ${technology} inline rounded-md font-Poppins`}>{x}</p>;
    })
  }
</>

