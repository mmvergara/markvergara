---
import ProjectCard from "../components/project-card/Project-Card.astro";
import ScrollView from "../components/Scroll-View.astro";
import Layout from "../layout/Layout.astro";
import { MMVProjects } from "../components/project-card/Projects";
---

<Layout title='Projects | Mark Vergara' contentDescription='Projects made by Vergara, Mark Matthew'>
  <section id='FeaturedProjects' class='section md:pt-2'>
    <ScrollView customClasses='text-center w-[100%] '>
      <h2 class='text-4xl sm:text-6xl text-purple-500 mb-4 font-Poppins font-semibold'>Projects</h2>
      <p class='text-lg'>
        These are all my personal projects <br /> ({MMVProjects.length} Projects) <br />
      </p>
    </ScrollView>
    <div class='flex justify-center flex-wrap gap-[60px]'>
      {MMVProjects.map((pd) => <ProjectCard props={pd} />)}
    </div>
  </section>
</Layout>

<style scoped>
  .section {
    @apply text-white w-[100%] flex flex-col justify-between gap-8 max-w-[1200px] mx-auto items-center mt-[10px] sm:mt-[40px];
  }
</style>
